
server {
	server_name ${DOMAIN};
	listen 80;

	location / {
		proxy_pass http://chessverse-website:${CHESSVERSE_WEB_PORT};
		include chessverse_params;
	}

	location /webapp/ {
		proxy_pass http://chessverse-ia:${CHESSVERSE_WEBAPP_PORT};
		include chessverse_params;
	}

	location /api/ {
		proxy_pass http://chessverse-back:${CHESSVERSE_BACK_PORT};
		include chessverse_params;
	}

}